<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vng.zalo.tdtai.zalo">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".zalo.ZaloApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/label_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Zalo">
        <activity android:name=".zalo.views.activities.RegisterActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="vng.zalo.tdtai.zalo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".zalo.views.activities.CreateGroupActivity"
            android:label="@string/description_create_group"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".zalo.views.activities.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".zalo.views.activities.RoomActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".zalo.views.activities.HomeActivity"
            android:label="@string/label_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".zalo.views.activities.LoginActivity"
            android:parentActivityName=".zalo.views.activities.IntroActivity" />
        <activity
            android:name=".zalo.views.activities.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>