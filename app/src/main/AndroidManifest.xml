<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vng.zalo.tdtai.zalo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".zalo.ZaloApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/label_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light">
        <activity
            android:name=".zalo.views.splash.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".zalo.views.home.fragments.chat_fragment.room_activity.RoomActivity"
            android:parentActivityName=".zalo.views.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".zalo.views.home.HomeActivity"
            android:label="@string/label_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".zalo.views.login.LoginActivity"
            android:parentActivityName=".zalo.views.intro.IntroActivity" />
        <activity android:name=".zalo.views.intro.IntroActivity" />
    </application>
</manifest>