<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".zalo.views.home.HomeActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/chatTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_chat_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/contactTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_contact_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/groupTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_group_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/diaryTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_diary_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/moreTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_more_tab" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/tabLayout"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>