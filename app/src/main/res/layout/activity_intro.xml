<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zalo.views.activities.IntroActivity">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_large_32dp"
        android:background="@drawable/zalo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginButton"/>

    <Button
        android:layout_marginLeft="@dimen/size_medium_16dp"
        android:layout_marginRight="@dimen/size_medium_16dp"
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_log_in"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_marginBottom="@dimen/size_large_24dp"
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_register"
        app:layout_constraintRight_toRightOf="@id/loginButton"
        app:layout_constraintLeft_toLeftOf="@id/loginButton"
        app:layout_constraintBottom_toTopOf="@id/vnButton" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/vnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_vietnamese"
        android:layout_marginBottom="@dimen/size_medium_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/engButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/engButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_english"
        app:layout_constraintTop_toTopOf="@id/vnButton"
        app:layout_constraintBottom_toBottomOf="@id/vnButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/vnButton" />

</androidx.constraintlayout.widget.ConstraintLayout>