<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".zalo.views.home.fragments.chat_fragment.room_activity.RoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarRoomActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:maxLines="4"
        android:inputType="textMultiLine"
        android:id="@+id/msgTextInputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_small_8dp"
        android:layout_marginLeft="@dimen/size_small_8dp"
        android:layout_marginEnd="@dimen/size_small_8dp"
        android:ems="10"
        android:hint="@string/hint_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pictureImgButton"
        app:layout_constraintStart_toEndOf="@+id/emojiImgButton" />
    <ImageView
        android:id="@+id/emojiImgButton"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_small_8dp"
        android:layout_marginLeft="@dimen/size_small_8dp"
        android:layout_marginBottom="@dimen/size_small_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/msgTextInputEditText"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/emoji"
        />

    <ImageView
        android:id="@+id/pictureImgButton"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/size_small_8dp"
        android:layout_marginRight="@dimen/size_small_8dp"
        android:layout_marginBottom="@dimen/size_small_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/msgTextInputEditText"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/voiceImgButton"
        app:srcCompat="@drawable/photo" />

    <ImageView
        android:id="@+id/sendMsgImgButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pictureImgButton"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/pictureImgButton"
        app:layout_constraintStart_toStartOf="@+id/pictureImgButton"
        app:layout_constraintTop_toTopOf="@+id/pictureImgButton"
        app:srcCompat="@drawable/send" />

    <ImageView
        android:id="@+id/voiceImgButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pictureImgButton"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/pictureImgButton"
        app:layout_constraintStart_toEndOf="@+id/uploadFileImgButton"
        app:layout_constraintTop_toTopOf="@+id/pictureImgButton"
        app:srcCompat="@drawable/mic" />

    <ImageView
        android:id="@+id/uploadFileImgButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pictureImgButton"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/voiceImgButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pictureImgButton"
        app:srcCompat="@drawable/attach_file" />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/browser_actions_bg_grey"
        android:id="@+id/recyclerViewRoomActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/msgTextInputEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarRoomActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>