<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".zalo.views.home.fragments.chat_fragment.room_activity.RoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        app:layout_constraintTop_toTopOf="@id/emojiImgView"
        android:imeOptions="actionSend"
        android:id="@+id/msgEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_message"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintRight_toLeftOf="@id/uploadFileImgButton"
        app:layout_constraintLeft_toRightOf="@id/emojiImgView"
        android:inputType="text" />
    <ImageView
        android:padding="@dimen/size_small_8dp"
        android:src="@drawable/emoji"
        android:contentDescription="@string/description_emoji_icon"
        android:id="@+id/emojiImgView"
        android:layout_width="@dimen/size_huge_48dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/pictureImgButton"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:src="@drawable/photo"
        android:contentDescription="@string/description_attach_picture_icon"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/emojiImgView" />

    <ImageView
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/send"
        android:contentDescription="@string/description_send_icon"
        android:id="@+id/sendMsgImgView"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintRight_toRightOf="@id/pictureImgButton"
        app:layout_constraintLeft_toLeftOf="@id/pictureImgButton"
        app:layout_constraintTop_toTopOf="@id/emojiImgView"/>

    <ImageView
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:id="@+id/voiceImgButton"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:src="@drawable/mic"
        android:contentDescription="@string/description_attach_voice_icon"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintRight_toLeftOf="@id/pictureImgButton"
        app:layout_constraintTop_toTopOf="@id/emojiImgView" />

    <ImageView
        android:id="@+id/uploadFileImgButton"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_attach_file_icon"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/attach_file"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintRight_toLeftOf="@id/voiceImgButton"
        app:layout_constraintTop_toTopOf="@id/emojiImgView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/emojiImgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>