<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createNewGroupLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/size_medium_16dp"
            android:paddingTop="@dimen/size_small_8dp"
            android:paddingRight="@dimen/size_medium_16dp"
            android:paddingBottom="@dimen/size_small_8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addGroupImgView"
                android:layout_width="@dimen/size_huge_48dp"
                android:layout_height="0dp"
                android:src="@drawable/add"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addGroupDescTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_small_8dp"
                android:text="@string/description_create_group"
                app:layout_constraintBottom_toBottomOf="@id/addGroupImgView"
                app:layout_constraintLeft_toRightOf="@id/addGroupImgView"
                app:layout_constraintTop_toTopOf="@id/addGroupImgView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/size_medium_16dp"
            android:paddingTop="@dimen/size_small_8dp"
            android:paddingRight="@dimen/size_medium_16dp"
            android:paddingBottom="@dimen/size_small_8dp">

            <TextView
                android:id="@+id/createGroupDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_add_group"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/remindDateImgButton"
                android:layout_width="@dimen/size_huge_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:background="@drawable/remind_date"
                android:contentDescription="@string/description_remind_date"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/remindDateTV"
                app:layout_constraintRight_toRightOf="@id/remindDateTV"
                app:layout_constraintTop_toBottomOf="@id/createGroupDescTV" />

            <TextView
                android:id="@+id/remindDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:text="@string/description_remind_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/remindDateImgButton" />

            <ImageButton
                android:id="@+id/voteImgButton"
                android:layout_width="@dimen/size_huge_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:background="@drawable/vote"
                android:contentDescription="@string/description_remind_date"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/voteTV"
                app:layout_constraintRight_toRightOf="@id/voteTV"
                app:layout_constraintTop_toBottomOf="@id/createGroupDescTV" />

            <TextView
                android:id="@+id/voteTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_large_24dp"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:text="@string/description_vote"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/remindDateTV"
                app:layout_constraintTop_toBottomOf="@id/voteImgButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/joinedGroupsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:text="@string/label_joined_groups"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/sortGroupSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:layout_marginEnd="@dimen/size_medium_16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_medium_16dp"
                app:layout_constraintTop_toBottomOf="@id/joinedGroupsTV" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>