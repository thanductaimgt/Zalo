<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@android:color/white"
            android:paddingTop="@dimen/size_small_8dp"
            android:paddingBottom="@dimen/size_small_8dp"
            android:paddingLeft="@dimen/size_medium_16dp"
            android:paddingRight="@dimen/size_medium_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/avatarImgView"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_avatar"
                android:src="@android:drawable/screen_background_light_transparent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                app:layout_constraintTop_toTopOf="@id/avatarImgView"
                android:id="@+id/groupNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:layout_marginEnd="@dimen/size_small_8dp"
                android:layout_marginRight="@dimen/size_small_8dp"
                android:layout_marginBottom="@dimen/size_tiny_4dp"
                app:layout_constraintBottom_toTopOf="@+id/descTextView"
                app:layout_constraintEnd_toStartOf="@id/postStatusImgView"
                app:layout_constraintStart_toEndOf="@id/avatarImgView" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/groupNameEditText"
                android:id="@+id/descTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_small_8dp"
                android:layout_marginRight="@dimen/size_small_8dp"
                android:text="@string/description_your_profile"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/size_small_text_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/avatarImgView"
                app:layout_constraintEnd_toStartOf="@id/postStatusImgView"
                app:layout_constraintStart_toStartOf="@id/groupNameEditText"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/postStatusImgView"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_32dp"
                android:background="@drawable/post_status"
                android:contentDescription="@string/description_post_status_image"
                app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatarImgView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@android:color/white"
            android:paddingTop="@dimen/size_small_8dp"
            android:paddingBottom="@dimen/size_small_8dp"
            android:paddingLeft="@dimen/size_medium_16dp"
            android:paddingRight="@dimen/size_medium_16dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--find-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarFind"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/find_around"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleFind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_find_around"
                app:layout_constraintBottom_toBottomOf="@id/avatarFind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarFind"
                app:layout_constraintTop_toTopOf="@id/avatarFind" />

            <!--chat rooms-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarChatRooms"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/chat_rooms"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarFind" />

            <TextView
                android:id="@+id/titleChatRooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_chat_rooms"
                app:layout_constraintBottom_toBottomOf="@id/avatarChatRooms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarChatRooms"
                app:layout_constraintTop_toTopOf="@id/avatarChatRooms" />

            <!--shop-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarShop"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/shop"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarChatRooms" />

            <TextView
                android:id="@+id/titleShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:layout_marginEnd="@dimen/size_small_8dp"
                android:layout_marginRight="@dimen/size_small_8dp"
                android:text="@string/label_shop"
                app:layout_constraintBottom_toBottomOf="@id/avatarShop"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/avatarShop"
                app:layout_constraintTop_toTopOf="@id/avatarShop" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_small_8dp"
                android:text="@string/description_shop"
                android:textColor="@color/colorTextGrey"
                app:layout_constraintBottom_toBottomOf="@id/shopDescImgView"
                app:layout_constraintEnd_toStartOf="@id/shopDescImgView"
                app:layout_constraintTop_toTopOf="@id/shopDescImgView" />

            <ImageView
                android:id="@+id/shopDescImgView"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/sale_9k"
                app:layout_constraintBottom_toBottomOf="@id/avatarShop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatarShop" />

            <!--stickers-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarStickers"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/stickers"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarShop" />

            <TextView
                android:id="@+id/titleStickers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_stickers"
                app:layout_constraintBottom_toBottomOf="@id/avatarStickers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarStickers"
                app:layout_constraintTop_toTopOf="@id/avatarStickers" />

            <!--channel-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarChannel"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/channel"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarStickers" />

            <TextView
                android:id="@+id/titleChannel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_channel"
                app:layout_constraintBottom_toBottomOf="@id/avatarChannel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarChannel"
                app:layout_constraintTop_toTopOf="@id/avatarChannel" />

            <!--Game-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarGame"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/game"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarChannel" />

            <TextView
                android:id="@+id/titleGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_game"
                app:layout_constraintBottom_toBottomOf="@id/avatarGame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarGame"
                app:layout_constraintTop_toTopOf="@id/avatarGame" />

            <!--eGovernment-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarEGovernment"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/e_government"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarGame" />

            <TextView
                android:id="@+id/titleEGovernment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_e_government"
                app:layout_constraintBottom_toBottomOf="@id/avatarEGovernment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarEGovernment"
                app:layout_constraintTop_toTopOf="@id/avatarEGovernment" />

            <!--Bank-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarBank"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/bank"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarEGovernment" />

            <TextView
                android:id="@+id/titleBank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_bank"
                app:layout_constraintBottom_toBottomOf="@id/avatarBank"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarBank"
                app:layout_constraintTop_toTopOf="@id/avatarBank" />

            <!--Food-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarFood"
                android:layout_width="@dimen/size_room_item_avatar_48dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_medium_16dp"
                android:contentDescription="@string/description_avatar"
                android:src="@drawable/food"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarBank" />

            <TextView
                android:id="@+id/titleFood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginLeft="@dimen/size_medium_16dp"
                android:text="@string/label_food"
                app:layout_constraintBottom_toBottomOf="@id/avatarFood"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarFood"
                app:layout_constraintTop_toTopOf="@id/avatarFood" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>