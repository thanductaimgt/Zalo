<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRecentContactsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/size_small_8dp"
    android:paddingBottom="@dimen/size_small_8dp"
    android:paddingLeft="@dimen/size_medium_16dp"
    android:paddingRight="@dimen/size_medium_16dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImgView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/size_huge_48dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"

        />
    <TextView
        android:id="@+id/nameTextView"
        android:layout_marginRight="@dimen/size_medium_16dp"
        android:layout_marginLeft="@dimen/size_medium_16dp"
        app:layout_constraintRight_toLeftOf="@id/radioButton"
        app:layout_constraintLeft_toRightOf="@id/avatarImgView"
        app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
        app:layout_constraintTop_toTopOf="@id/avatarImgView"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/radioButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
        app:layout_constraintTop_toTopOf="@id/avatarImgView"
        android:layout_width="@dimen/size_large_24dp"
        android:layout_height="@dimen/size_large_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>